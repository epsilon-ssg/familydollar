<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Multimedia"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    type="nav"/>
                <items jcr:primaryType="nt:unstructured">
                      <column
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/foundation/container">
                          <items jcr:primaryType="nt:unstructured">
                              <multimediaType
	                               jcr:primaryType="nt:unstructured"
	                               sling:resourceType="granite/ui/components/foundation/form/select"
	                               class="cq-dialog-dropdown-showhide"
	                               cq-dialog-dropdown-showhide-target=".multimediatype"
	                               fieldLabel="Select Multimedia type"
	                               name="./multimediaType">
	                               <items jcr:primaryType="nt:unstructured">
	                                   <imagecarousel
	                                       jcr:primaryType="nt:unstructured"
	                                       key="imagecarousel"
	                                       text="Image/Carousel"
	                                       value="imagecarousel"/>
	                                   <flash
	                                       jcr:primaryType="nt:unstructured"
	                                       key="flash"
	                                       text="Flash"
	                                       value="flash"/>
	                                  </items>
                              </multimediaType>
                              <imagecarousel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container"
                                    class="hide multimediatype"
                                    showhidetargetvalue="imagecarousel">
                                    <items jcr:primaryType="nt:unstructured">
                                    	<heading
                                           jcr:primaryType="nt:unstructured"
                                           sling:resourceType="granite/ui/components/foundation/heading"
                                           class="coral-Heading coral-Heading--4"
                                           level="{Long}4"
                                           text="Image/Carousel details (If more than one image is configured, it will be rendered as carousel)"/>
                                       <well
                                           jcr:primaryType="nt:unstructured"
                                           sling:resourceType="granite/ui/components/foundation/container">
                                           <layout
                                               jcr:primaryType="nt:unstructured"
                                               sling:resourceType="granite/ui/components/foundation/layouts/well"/>
                                           <items jcr:primaryType="nt:unstructured">
			                                    <imagePath
		                                            jcr:primaryType="nt:unstructured"
		                                            sling:resourceType="granite/ui/components/foundation/form/multifield"
		                                            fieldLabel="Image Path">
			                                       		 <field
			                                                jcr:primaryType="nt:unstructured"
			                                                name="./imagePath"
			                                                rootPath="/content/dam/familydollarcorporate"
			                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"/>
			                                    </imagePath>
                                           </items>
                                       </well>
                                    </items>
                              </imagecarousel>
                              <flash
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container"
                                    class="hide multimediatype"
                                    showhidetargetvalue="flash">
                                    <items jcr:primaryType="nt:unstructured">
                                    	<heading
                                           jcr:primaryType="nt:unstructured"
                                           sling:resourceType="granite/ui/components/foundation/heading"
                                           class="coral-Heading coral-Heading--4"
                                           level="{Long}4"
                                           text="Flash details"/>
                                       <well
                                           jcr:primaryType="nt:unstructured"
                                           sling:resourceType="granite/ui/components/foundation/container">
                                           <layout
                                               jcr:primaryType="nt:unstructured"
                                               sling:resourceType="granite/ui/components/foundation/layouts/well"/>
                                           <items jcr:primaryType="nt:unstructured">
                                           		<flashPath
							                        jcr:primaryType="nt:unstructured"
							                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
							                        fieldLabel="Flash file path"
							                        name="./flashPath"
							                        rootPath="/content/dam/familydollarcorporate"/>
                                           </items>
                                       </well>
                                    </items>
                              </flash>
                          </items>
                      </column>
        </items>
    </content>
</jcr:root>