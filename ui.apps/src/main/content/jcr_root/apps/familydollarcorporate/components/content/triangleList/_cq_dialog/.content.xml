<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Footer Links"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <multifield
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/apps/familydollarcorporate/components/content/multifield"
                        fieldDescription="Click 'Add field' to add more menu options"
                        fieldLabel="Links">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
                            name="./items">
                            <layout
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <triangleImagepath
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                            fieldDescription="Image for Triangle"
                                            fieldLabel="Triangle Image"
                                            name="./triangleImage"
                                            required="{Boolean}true"
                                            rootPath="/content"/>
                                        <triangleImageurl
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                            fieldDescription="URL for Triangle Image"
                                            fieldLabel="Triangle Image URL"
                                            name="./triangleImageurl"
                                            required="{Boolean}true"
                                            rootPath="/content"/>
                                        <popupImagepath
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                            fieldDescription="Image for Popup"
                                            fieldLabel="Popup Image"
                                            name="./popupImage"
                                            required="{Boolean}true"
                                            rootPath="/content"/>
                                        <popupImageurl
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                            fieldDescription="URL for Popup Image"
                                            fieldLabel="Popup Image URL"
                                            name="./popupImageurl"
                                            required="{Boolean}true"
                                            rootPath="/content"/>
                                        <newWindow
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/select"
                                            fieldLabel="New Window"
                                            name="./newWindow">
                                            <items jcr:primaryType="nt:unstructured">
                                                <value1
                                                    jcr:primaryType="nt:unstructured"
                                                    text="true"
                                                    value="true"/>
                                                <value2
                                                    jcr:primaryType="nt:unstructured"
                                                    text="false"
                                                    value="false"/>
                                            </items>
                                        </newWindow>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </multifield>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
